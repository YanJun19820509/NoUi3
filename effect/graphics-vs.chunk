precision highp float;

#include <builtin/uniforms/cc-global>
#include <builtin/uniforms/cc-local>

in vec3 a_position;
in vec4 a_color;
in float a_dist;

out vec4 v_color;
out float v_dist;
out vec2 v_uv;

vec4 vert () {
  vec4 pos = vec4(a_position, 1);
  pos = cc_matViewProj * cc_matWorld * pos;

  v_uv = (pos.xy + vec2(1.0,1.0)) / 2.0;
  v_uv.y = 1. - v_uv.y;
  v_color = a_color;
  v_dist = a_dist;
  
  return pos;
}