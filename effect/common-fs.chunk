#include <sprite-texture>

in vec4 color;
in vec2 ext;
in float def;
in vec2 uv0;  
in float t1;
in float t2; 

uniform ZZ {
  vec4 factRect;//碎图在合图中的相对rect
  float ratio;//合图的宽高比
};

//标准纹理效果
vec4 normalTexture(sampler2D _texture, vec2 _uv) {
  #if USE_TEXTURE
    return CCSampleWithAlphaSeparated(_texture, _uv); 
  #else
    return texture(_texture, _uv);
  #endif
}